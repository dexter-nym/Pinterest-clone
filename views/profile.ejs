<% include ./partials/header.ejs%>

<div class="profile w-full min-h-screen bg-zinc-800 pt-1 px-6 py-6 text-white">
  <form
    id="upload-form"
    hidden
    action="/users/fileupload"
    method="post"
    enctype="multipart/form-data"
  >
    <input id="form-input" type="file" name="image" />
  </form>
  <div
    class="w-full h-full mt-15 profile-data flex flex-col justify-center items-center"
  >
    <div class="relative">
      <span
        id="upload-icon"
        class="w-8 h-8 absolute bottom-3 right-1 rounded-full flex items-center justify-center bg-zinc-200"
      >
        <i class="text-zinc-700 ri-pencil-fill"></i>
      </span>
      <div class="w-32 h-32 bg-zinc-200 rounded-full mb-3 overflow-hidden">
        <img
          src="<%= user.profileImage %>"
          alt="profile picture"
          class="w-full h-full object-cover"
        />
      </div>
    </div>
    <h1 class="text-3xl font-semibold">Kunal Paraye</h1>
    <h3 class="text-md">@username</h3>
    <a
      href="/users/edit"
      class="px-6 py-2 mt-4 bg-zinc-700 rounded-full text-xs font-semibold"
      >Edit</a
    >
    <a
      href="/users/add"
      class="px-7 py-2 rounded-lg bg-red-700 text-xs font-semibold mt-5"
    >
      Add new post
    </a>
  </div>
  <div class="cards flex flex-wrap gap-10 mt-10">
    <div class="card">
      <div class="w-30 h-25 bg-zinc-200 rounded-md overflow-hidden">
        <img
          src="https://imgs.search.brave.com/2OCyeuhm-hU9341-2eGmjBiaaAVbvwEGE5jfv11JPPQ/rs:fit:860:0:0:0/g:ce/aHR0cHM6Ly9jb3Nt/aWNhcnRwcmludHMu/Y29tL2Nkbi9zaG9w/L2ZpbGVzL2Zsb3dl/cnMtb2YtdGhlLWNv/c21vcy1hcnQtcHJp/bnQtbWV0YWwtcG9z/dGVyLWNhbnZhcy13/cmFwLTIxMjE5NS5q/cGc_dj0xNzMwNTc0/Nzk5JndpZHRoPTUz/Mw"
          alt="cover image"
          class="w-full h-full object-cover"
        />
      </div>
      <h3 class="text-lg font-semibold mt-2">All Pins</h3>
      <h5 class="text-sm opacity-60">82 Pins</h5>
    </div>
  </div>
</div>
<script>
  document.getElementById("upload-icon").addEventListener("click", function () {
    document.getElementById("form-input").click();
  });
  document.getElementById("form-input").addEventListener("change", function () {
    document.getElementById("upload-form").submit();
  });
</script>
<% include ./partials/footer.ejs%>
