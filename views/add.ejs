<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
  <h1 class="text-xl">Create a new post.</h1>
  <hr class="opacity-10 mt-3" />
  <form action="/users/createpost" method="post">
    <input type="file" name="image" class="block w-1/3 px-3 py-2" />
    <input
      type="text"
      name="title"
      placeholder="title"
      class="block w-1/3 px-3 py-2 bg-white text-black border-1 mt-2 rounded-xs"
    />
    <textarea
      type="text"
      name="description"
      placeholder="description"
      class="block h-60 w-1/3 px-3 py-2 bg-white text-black border-1 mt-2 rounded-xs"
    ></textarea>
    <input
      type="submit"
      value="Create post"
      class="block w-1/3 px-3 py-2 mt-2 bg-red-700 rounded-xs"
    />
  </form>
</div>

